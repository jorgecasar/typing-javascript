{
  "include": ["src/**/*"],
  "compilerOptions": {
    /* Basic config */
    // Files will be emitted into this directory
	 "outDir": "dist-types",
    // Tells TypeScript to read JS files, as normally they are ignored as source files
    "allowJs": true,

	"target": "ES2022",
	"module": "ES2022",

	"declaration": true,

	"declarationMap": true,

	"emitDeclarationOnly": true,

	"skipLibCheck": true,

	"checkJs": true,

	"strict": true,
  }
}
